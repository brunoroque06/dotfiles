[credential]
	helper = osxkeychain

[core]
	editor = nvim
	pager = delta
	excludesfile = ~/.gitignore-global

[delta]
	light = true
	navigate = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[merge]
	tool = vimdiff2

[mergetool]
	keepBackup = false

[mergetool "vimdiff2"]
	path = nvim

[pull]
	rebase = false

