[credential]
helper = osxkeychain

[core]
excludesfile = ~/.giti
pager = delta

[delta]
hunk-header-style = omit
light = true
navigate = true
right-arrow = ->

[diff]
tool = "code"

[difftool "code"]
cmd = code --wait --diff $LOCAL $REMOTE

[filter "lfs"]
required = true
clean = git-lfs clean -- %f
process = git-lfs filter-process
smudge = git-lfs smudge -- %f

[merge]
tool = "code"

[mergetool "code"]
cmd = code --wait $MERGED
keepBackup = false

[pull]
rebase = false

