[credential]
helper = osxkeychain

[core]
autocrlf = input
excludesfile = ~/.config/git/ignore
pager = delta

[delta]
hunk-header-style = omit
light = true
navigate = true
right-arrow = ->

[diff]
algorithm = histogram
tool = code

[difftool "code"]
cmd = code --wait --diff $LOCAL $REMOTE

[filter "lfs"]
required = true
clean = git-lfs clean -- %f
process = git-lfs filter-process
smudge = git-lfs smudge -- %f

[merge]
conflictstyle = zdiff3
tool = code

[mergetool "code"]
cmd = code --wait $MERGED
keepBackup = false

[pull]
rebase = false

