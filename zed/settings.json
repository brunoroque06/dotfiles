{
  "buffer_font_family": "Cascadia Code",
  "buffer_font_size": 13,
  "cursor_blink": false,
  "languages": {
    "Python": {
      "formatter": {
        "external": {
          "command": "/opt/homebrew/bin/ruff",
          "arguments": [
            "check",
            "--exit-zero",
            "--fix",
            "--stdin-filename",
            "{buffer_path}",
            "-"
          ]
        }
      }
    },
    "Rust": {
      "formatter": {
        "external": {
          "command": "~/.cargo/bin/rustfmt",
          "arguments": ["-"]
        }
      }
    }
  },
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "auto"
  },
  "soft_wrap": "editor_width",
  "tab_bar": {
    "show": false
  },
  "terminal": {
    "shell": {
      "program": "/opt/homebrew/bin/elvish"
    }
  },
  "theme": "One Light",
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "ui_font_family": "Cascadia Code",
  "ui_font_size": 14,
  "vim_mode": true
}
