{
  "[csharp]": {
    "editor.defaultFormatter": "csharpier.csharpier-vscode"
  },
  "[css][dockercompose][html][javascript][json][jsonc][markdown][scss][typescript][yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[csv]": {
    "editor.stickyScroll.enabled": true
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "D2.execPath": "/opt/homebrew/bin/d2",
  "D2.previewLayout": "elk",
  "bicep.enableSurveys": false,
  "breadcrumbs.symbolPath": "off",
  "debug.allowBreakpointsEverywhere": true,
  "debug.inlineValues": "on",
  "debug.internalConsoleOptions": "neverOpen",
  "debug.toolBarLocation": "docked",
  "diffEditor.renderSideBySide": false,
  "dotnet.automaticallyCreateSolutionInWorkspace": false,
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.cursorBlinking": "solid",
  "editor.cursorSurroundingLines": 5,
  "editor.cursorWidth": 2,
  "editor.fontFamily": "Cascadia Code",
  "editor.fontLigatures": false,
  "editor.fontSize": 13,
  "editor.formatOnSave": false,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "trailing",
  "editor.scrollbar.verticalScrollbarSize": 8,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.sortOrder": "alphabetical",
  "explorer.openEditors.visible": 1,
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true,
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.editor.enableAutoCompletions": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": true,
  "markdown.preview.fontFamily": "SF Pro Rounded",
  "python.analysis.typeCheckingMode": "basic",
  "python.languageServer": "Pylance",
  "python.testing.pytestEnabled": true,
  "scm.alwaysShowRepositories": true,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.lineHeight": 1,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vim.foldfix": true,
  "vim.highlightedyank.enable": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["=", "="],
      "commands": ["editor.action.organizeImports", "editor.action.format"]
    },
    {
      "before": ["=", "i"],
      "commands": ["editor.action.organizeImports"]
    },
    {
      "before": ["[", "<space>"],
      "commands": ["editor.action.insertLineBefore"]
    },
    {
      "before": ["]", "<space>"],
      "commands": ["editor.action.insertLineAfter"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["[", "q"],
      "commands": ["search.action.focusPreviousSearchResult"],
      "when": "hasSearchResult"
    },
    {
      "before": ["]", "q"],
      "commands": ["search.action.focusNextSearchResult"],
      "when": "hasSearchResult"
    },
    {
      "before": ["c", "d"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["d", "o"],
      "commands": ["editor.action.dirtydiff.next"]
    },
    {
      "before": ["d", "p"],
      "commands": ["git.revertSelectedRanges"]
    },
    {
      "before": ["g", "A"],
      "commands": ["references-view.find"]
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.peekDefinition"]
    },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "s"],
      "commands": ["workbench.action.gotoSymbol"]
    },
    {
      "before": ["g", "S"],
      "commands": ["workbench.action.showAllSymbols"]
    },
    {
      "after": ["c-r"],
      "before": ["U"]
    },
    {
      "before": ["<leader>", "b"],
      "commands": ["editor.debug.action.toggleBreakpoint"]
    },
    {
      "before": ["<leader>", "c"],
      "commands": ["workbench.action.debug.continue"]
    },
    {
      "before": ["<leader>", "d"],
      "commands": ["workbench.action.debug.start"]
    },
    {
      "before": ["<leader>", "j"],
      "commands": ["bookmarks.toggle"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["workbench.action.debug.stop"]
    }
  ],
  "vim.surround": true,
  "vim.useSystemClipboard": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "window.commandCenter": false,
  "window.title": "${activeEditorLong}${separator}${rootPath}",
  "workbench.activityBar.location": "top",
  "workbench.colorTheme": "Default Light Modern",
  "workbench.editor.enablePreview": false,
  "workbench.editor.showTabs": "single",
  "workbench.layoutControl.enabled": false,
  "workbench.tree.indent": 15,
  "workbench.tree.renderIndentGuides": "always"
}
