{
  "[css][dockercompose][html][javascript][json][jsonc][markdown][scss][typescript][yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[Log]": {
    "editor.wordWrap": "on"
  },
  "D2.execPath": "/opt/homebrew/bin/d2",
  "debug.allowBreakpointsEverywhere": true,
  "debug.inlineValues": "on",
  "debug.internalConsoleOptions": "neverOpen",
  "debug.toolBarLocation": "docked",
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": true
  },
  "editor.cursorBlinking": "solid",
  "editor.cursorSurroundingLines": 5,
  "editor.cursorWidth": 2,
  "editor.fontFamily": "Cascadia Code",
  "editor.fontLigatures": false,
  "editor.fontSize": 13,
  "editor.formatOnSave": false,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "trailing",
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "errorLens.exclude": ["(.*): Unknown word."],
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.sortOrder": "alphabetical",
  "explorer.openEditors.visible": 1,
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "afterDelay",
  "files.trimTrailingWhitespace": true,
  "git.openRepositoryInParentFolders": "never",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": true,
  "markdown.preview.fontFamily": "SF Compact Rounded",
  "plantuml.exportSubFolder": false,
  "plantuml.render": "PlantUMLServer",
  "plantuml.server": "https://www.plantuml.com/plantuml",
  "python.analysis.typeCheckingMode": "basic",
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.linting.pylintEnabled": true,
  "python.testing.pytestEnabled": true,
  "scm.alwaysShowRepositories": true,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.lineHeight": 1,
  "typescript.implementationsCodeLens.enabled": false,
  "typescript.referencesCodeLens.enabled": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "vim.foldfix": true,
  "vim.highlightedyank.enable": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["=", "="],
      "commands": ["editor.action.organizeImports", "editor.action.format"]
    },
    { "before": ["=", "i"], "commands": ["editor.action.organizeImports"] },
    {
      "before": ["[", "<space>"],
      "commands": ["editor.action.insertLineBefore"]
    },
    {
      "before": ["]", "<space>"],
      "commands": ["editor.action.insertLineAfter"]
    },
    { "before": ["[", "d"], "commands": ["editor.action.marker.prev"] },
    { "before": ["]", "d"], "commands": ["editor.action.marker.next"] },
    {
      "before": ["[", "q"],
      "commands": ["search.action.focusPreviousSearchResult"],
      "when": "hasSearchResult"
    },
    {
      "before": ["]", "q"],
      "commands": ["search.action.focusNextSearchResult"],
      "when": "hasSearchResult"
    },
    { "before": ["g", "d"], "commands": ["editor.action.peekDefinition"] },
    { "before": ["g", "i"], "commands": ["editor.action.goToImplementation"] },
    { "before": ["g", "r"], "commands": ["references-view.find"] },
    { "before": ["U"], "after": ["c-r"] },
    { "before": ["<leader>", "h"], "commands": ["editor.action.showHover"] },
    { "before": ["<leader>", "j"], "commands": ["bookmarks.toggle"] },
    { "before": ["<leader>", "r"], "commands": ["editor.action.rename"] }
  ],
  "vim.surround": true,
  "vim.useSystemClipboard": true,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "window.commandCenter": true,
  "window.title": "${activeEditorLong}${separator}${rootPath}",
  "workbench.colorTheme": "Default Light Modern",
  "workbench.editor.enablePreview": false,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 1,
  "workbench.editor.showTabs": false,
  "workbench.tree.indent": 15,
  "workbench.tree.renderIndentGuides": "always"
}
