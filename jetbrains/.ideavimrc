" https://youtrack.jetbrains.com/issue/IDEA-67559

" https://github.com/JetBrains/ideavim/wiki/%22set%22-commands
set clipboard=unnamed
set hlsearch
set ignorecase
set incsearch
set number
set relativenumber
set scrolloff=8
set showcmd
set showmode
set smartcase

set ideajoin
set ideamarks
set idearefactormode=keep

set commentary
set highlightedyank
set NERDTree
set surround

sethandler <c-2> a:vim
sethandler <c-6> a:vim
sethandler <c-[> a:vim
sethandler <c-\> a:vim
sethandler <c-a> a:vim
sethandler <c-b> a:vim
sethandler <c-c> a:vim
sethandler <c-d> a:vim
sethandler <c-e> a:vim
sethandler <c-f> a:vim
sethandler <c-g> a:vim
sethandler <c-h> a:vim
sethandler <c-i> a:vim
sethandler <c-j> a:vim
sethandler <c-k> a:vim
sethandler <c-l> a:vim
sethandler <c-m> a:vim
sethandler <c-n> a:vim
sethandler <c-o> a:vim
sethandler <c-p> a:vim
sethandler <c-q> a:vim
sethandler <c-r> a:vim
sethandler <c-s-2> a:vim
sethandler <c-s-6> a:vim
sethandler <c-s> a:vim
sethandler <c-t> a:vim
sethandler <c-u> a:vim
sethandler <c-v> a:vim
sethandler <c-w> a:vim
sethandler <f1> a:ide

map == <Action>(ReformatCode)
map =i <Action>(OptimizeImports)
map [<space> k<Action>(EditorStartNewLine)j
map ]<space> <Action>(EditorStartNewLine)k
map [d <Action>(GotoPreviousError)
map ]d <Action>(GotoNextError)
map [f <Action>(MethodUp)
map ]f <Action>(MethodDown)
map [q <Action>(PreviousOccurence)
map ]q <Action>(NextOccurence)

map gd <Action>(GotoDeclaration)
" map gh <Action>(ShowErrorDescription)
map gi <Action>(GotoImplementation)
map gr <Action>(ShowUsages)

" ga -> <m-enter> ShowIntentionActions
nnoremap ge G
nnoremap gh 0
nnoremap gl $
nnoremap gs ^

map U <Action>($Redo)

map <c-c> <Action>(CommentByLineComment)
map <c-s> <Action>(ToggleBookmark)

map <c-w>q <c-w>c
map <c-w>J <Action>(MoveTabDown)
map <c-w>L <Action>(MoveTabRight)

let mapleader="\<space>"

map <leader>a <Action>(Refactorings.QuickListPopupAction)
map <leader>f <Action>(GotoFile)
map <leader>j <Action>(ShowBookmarks)
map <leader>s <Action>(FileStructurePopup)
