" https://youtrack.jetbrains.com/issue/IDEA-67559

" https://github.com/JetBrains/ideavim/wiki/%22set%22-commands
set clipboard=unnamed
set hlsearch
set ignorecase
set incsearch
set number
set relativenumber
set scrolloff=8
set showcmd
set showmode
set smartcase

set ideajoin
set ideamarks
set idearefactormode=keep

set commentary
set highlightedyank
set NERDTree
set surround

sethandler <c-2> a:vim
sethandler <c-[> a:vim
sethandler <c-\> a:vim
sethandler <c-a> a:vim
sethandler <c-b> a:vim
sethandler <c-c> a:vim
sethandler <c-d> a:vim
sethandler <c-e> a:vim
sethandler <c-f> a:vim
sethandler <c-g> a:vim
sethandler <c-h> a:vim
sethandler <c-i> a:vim
sethandler <c-j> a:vim
sethandler <c-k> a:vim
sethandler <c-l> a:vim
sethandler <c-m> a:vim
sethandler <c-n> a:vim
sethandler <c-o> a:vim
sethandler <c-p> a:vim
sethandler <c-q> a:vim
sethandler <c-r> a:vim
sethandler <c-s-2> a:vim
sethandler <c-s-6> a:vim
sethandler <c-s> a:vim
sethandler <c-t> a:vim
sethandler <c-u> a:vim
sethandler <c-v> a:vim
sethandler <c-w> a:vim
sethandler <f1> a:ide

nnoremap == :action ReformatCode<cr>
nnoremap =i :action OptimizeImports<cr>
nnoremap [<space> O<esc>j
nnoremap ]<space> o<esc>k
nnoremap [d :action GotoPreviousError<cr>
nnoremap ]d :action GotoNextError<cr>
nnoremap [e ddP
nnoremap ]e ddp
nnoremap [f :action MethodUp<cr>
nnoremap ]f :action MethodDown<cr>

nnoremap ga :action ShowIntentionActions<cr>
nnoremap gd :action GotoDeclaration<cr>
nnoremap gh :action ShowErrorDescription<cr>
nnoremap gi :action GotoImplementation<cr>
" gr -> <m-enter>
nnoremap gs :action FileStructurePopup<cr>
nnoremap gu :action ShowUsages<cr>

